{
  "compilerOptions": {
    "sourceMap": true,
    "module": "esnext",
    "noEmit": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports":  true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "pretty": true,
    "skipLibCheck": true,
    // "noImplicitAny": true,
    // "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "client/*": ["client/*"],
      "shared/*": ["shared/*"],
      "server/*": ["server/*"]
    }
  },
  "include": [
    "./client/**/*",
    "./server/**/*"
  ]
}

